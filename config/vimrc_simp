"Compile and run
map <F5> :call Run()<CR>
func! Run()
	if &filetype == 'c'
	exec "w"
	exec "! 
    \ clear;
	\ gcc -g % -o %<;
	\ ./%<;"
	endif

	if &filetype == 'cpp'
	exec "w"
	exec "! 
    \ clear;
	\ g++ -g % -o %<;
	\ ./%<;"
	endif

    if &filetype == 'java'
	exec "w"
	exec "! 
    \ clear;
	\ javac %;
	\ java %<;"
	endif

    if &filetype == 'python'
        exec "w"
        exec "!
        \clear;
        \ python3 %;"
    endif
endfunc

map <C-F5> :call Compile()<CR>
func! Compile()
	if &filetype == 'c'
	exec "w"
	exec "! 
    \ clear;
	\ gcc -g % -o %<;"
	endif

	if &filetype == 'cpp'
	exec "w"
	exec "! 
    \ clear;
	\ g++ -g % -o %<;"
	endif

    if &filetype == 'java'
	exec "w"
	exec "! 
    \ clear;
	\ javac %;"
	endif
endfunc
